<div class="container">
  <div class= "row justify-content-center mt-3">
    <div class= "col-10">
      <%= render 'shared/errors' %>
      <%= form_with(model: @article, local: true, class: "shadow p-3 mb-3 rounded", id: "formbackground") do |f| %>
        <div class= "form-group row">
          <%= f.label :title, class: "col-2 col-form-label form_labels" %>
          <div class="col-10">
          <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title of article" %>
          </div>
        </div>
        <div class= "form-group row">
          <%= f.label :description, class: "col-2 col-form-label form_labels" %>
            <div class="col-10">
              <%= f.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder: "Description of article" %>
            </div>
        </div>
      <div class= "form-group row justify-content-center">
          <%= f.submit class: "btn btn-outline-light btn-lg", id:"jumbo-btn" %>
      </div>
      <% end %>
        <%= link_to '[ Cancel and return to articles listing ]', articles_path, class: "wordlink form-group row justify-content-center mt-5" %>
    </div>
  </div>
</div>
