<div class="container">
  <div class= "row justify-content-center mt-3">
    <div class= "col-10">
      <%= render 'shared/errors', obj: @user %>
      <%= form_with(model: @user, local: true, class: "shadow p-3 mb-3 rounded", id: "formbackground") do |f| %>
        <div class= "form-group row">
          <%= f.label :username, class: "col-2 col-form-label form_labels" %>
          <div class="col-10">
          <%= f.text_field :username, class: "form-control shadow rounded", placeholder: "Create a username" %>
          </div>
        </div>
        <div class= "form-group row">
          <%= f.label :email, class: "col-2 col-form-label form_labels" %>
            <div class="col-10">
              <%= f.email_field :email, class: "form-control shadow rounded", placeholder: "Enter your email" %>
            </div>
        </div>
        <div class= "form-group row">
          <%= f.label :password, class: "col-2 col-form-label form_labels" %>
            <div class="col-10">
              <%= f.password_field :password, class: "form-control shadow rounded", placeholder: "Create a password" %>
            </div>
        </div>
      <div class= "form-group row justify-content-center">
          <%= f.submit "Sign Up", class: "btn btn-outline-light btn-lg", id:"jumbo-btn" %>
      </div>
      <% end %>
        <%= link_to '[ Cancel and return to articles listing ]', articles_path, class: "wordlink form-group row justify-content-center mt-5" %>
    </div>
  </div>
</div>
