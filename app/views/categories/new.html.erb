<h1 class="text-center mt-4">Create a new category</h1>

<div class="container">
  <div class= "row justify-content-center mt-3">
    <div class= "col-10">
      <%= render 'shared/errors', obj: @category %>
      <%= form_with(model: @category, local: true, class: "shadow p-3 mb-3 rounded", id: "formbackground") do |f| %>
        <div class= "form-group row">
          <%= f.label :name, "Category Name", class: "col-2 col-form-label form_labels" %>
          <div class="col-10">
          <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Create a name" %>
          </div>
        </div>
      <div class= "form-group row justify-content-center">
          <%= f.submit class: "btn btn-outline-light btn-lg", id:"jumbo-btn" %>
      </div>
      <% end %>
        <%= link_to '[ Cancel and return to categories listing ]', categories_path, class: "wordlink form-group row justify-content-center mt-5" %>
    </div>
  </div>
</div>
